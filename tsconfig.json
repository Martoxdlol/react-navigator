{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        /* Linting */
        "strict": true,
        /* Build */
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "example",
    ],
}